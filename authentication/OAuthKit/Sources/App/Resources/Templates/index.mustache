{{<base}}
    {{$body}}
    <div class="pt-4 px-12">
        <h1 class="text-2xl font-bold mb-4">Parks</h1>
        <div class="overflow-x-auto">
        <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Name</th>
                    <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Latitude</th>
                    <th class="px-4 py-2 text-left text-sm font-semibold text-gray-700">Longitude</th>
                </tr>
            </thead>
            <tbody class="divide-y divide-gray-200">
                {{#parksContext}}
                <tr class="hover:bg-gray-50">
                    <td class="px-4 py-2 text-sm text-green-600">{{ name }}</td>
                    <td class="px-4 py-2 text-sm text-gray-800">{{latitude}}</td>
                    <td class="px-4 py-2 text-sm text-gray-800">{{longitude}}</td>
                </tr>
                {{/parksContext}}
                </tbody>
            </table>
        </div>
    <div>
    {{/body}}
{{/base}}
